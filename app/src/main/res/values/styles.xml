        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="MontserratMedium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/lightGray2</item>
        <item name="android:background">@drawable/edit_text_bg</item>
